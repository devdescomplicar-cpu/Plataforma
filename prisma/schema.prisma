// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  name      String
  role      String   @default("user") // user, admin
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  deletedAt DateTime?

  accounts Account[]

  @@index([email])
  @@index([deletedAt])
  @@map("users")
}

model Account {
  id         String   @id @default(cuid())
  name       String
  userId     String
  status     String   @default("active") // active, inactive, trial, cancelled, vencido
  trialEndsAt DateTime?
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  deletedAt  DateTime?

  user      User       @relation(fields: [userId], references: [id])
  vehicles  Vehicle[]
  sales     Sale[]
  expenses  Expense[]
  clients   Client[]
  checklists Checklist[]
  subscriptions Subscription[]
  pushSubscriptions PushSubscription[]

  @@index([userId])
  @@index([status])
  @@index([deletedAt])
  @@map("accounts")
}

model Vehicle {
  id           String   @id @default(cuid())
  accountId    String
  vehicleType  String   @default("car") // car, motorcycle
  brand        String
  model        String
  year         Int
  km           Int?     // Quilometragem
  plate        String?
  fuel         String   // Flex, Gasolina, Etanol, Diesel, Elétrico, Híbrido
  color        String
  transmission String?  // Manual, Automático, CVT
  steering     String?  // Normal, hidráulica, elétrica
  origin       String   @default("own") // own, consignment, repass
  features     String[] // Array de opcionais e acessórios
  purchasePrice Float?  // Opcional para consignado/repasse
  salePrice    Float?   // Opcional para consignado/repasse
  status       String   @default("available") // available, reserved, sold
  description  String?  // Observações
  // Dados de consignado
  consignmentOwnerName    String?
  consignmentOwnerPhone   String?
  consignmentCommissionType  String?  // percentual, fixed
  consignmentCommissionValue Float?
  consignmentMinRepassValue  Float?
  consignmentStartDate       DateTime?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  deletedAt    DateTime?

  account      Account        @relation(fields: [accountId], references: [id])
  images       VehicleImage[]
  sales        Sale[]
  expenses     Expense[]
  checklists   Checklist[]

  @@index([accountId])
  @@index([brand])
  @@index([model])
  @@index([plate])
  @@index([status])
  @@index([origin])
  @@index([deletedAt])
  @@map("vehicles")
}

model VehicleImage {
  id        String   @id @default(cuid())
  vehicleId String
  url       String
  key       String   // MinIO key
  order     Int      @default(0)
  createdAt DateTime @default(now())

  vehicle Vehicle @relation(fields: [vehicleId], references: [id], onDelete: Cascade)

  @@index([vehicleId])
  @@index([order])
  @@map("vehicle_images")
}

model Sale {
  id           String   @id @default(cuid())
  accountId    String
  vehicleId    String
  clientId     String?
  salePrice    Float
  profit       Float    // Calculado: salePrice - purchasePrice
  profitPercent Float   // Calculado: (profit / purchasePrice) * 100
  paymentMethod String  // À vista, Financiamento, Consórcio
  saleDate     DateTime @default(now())
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  deletedAt    DateTime?

  account Account  @relation(fields: [accountId], references: [id])
  vehicle Vehicle  @relation(fields: [vehicleId], references: [id])
  client  Client?  @relation(fields: [clientId], references: [id])

  @@index([accountId])
  @@index([vehicleId])
  @@index([clientId])
  @@index([saleDate])
  @@index([deletedAt])
  @@map("sales")
}

model Expense {
  id          String   @id @default(cuid())
  accountId   String
  vehicleId  String?
  type        String   // IPVA, Manutenção, Documentação, Polimento, Pneus, etc.
  value       Float
  description String?
  date        DateTime @default(now())
  status      String   @default("pending") // pending, paid
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  deletedAt   DateTime?

  account Account  @relation(fields: [accountId], references: [id])
  vehicle Vehicle? @relation(fields: [vehicleId], references: [id])

  @@index([accountId])
  @@index([vehicleId])
  @@index([date])
  @@index([status])
  @@index([deletedAt])
  @@map("expenses")
}

model Client {
  id        String   @id @default(cuid())
  accountId String
  name      String
  email     String?
  phone     String?
  cpfCnpj   String?
  zipCode   String?  // CEP (8 dígitos, armazenado só números)
  street    String?  // Rua/Logradouro
  number    String?  // Número
  complement String? // Complemento
  neighborhood String? // Bairro
  city      String?
  state     String?  // UF (AC, AL, AP, etc.)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  deletedAt DateTime?

  account Account @relation(fields: [accountId], references: [id])
  sales   Sale[]

  @@index([accountId])
  @@index([name])
  @@index([email])
  @@index([cpfCnpj])
  @@index([zipCode])
  @@index([deletedAt])
  @@map("clients")
}

model Checklist {
  id        String   @id @default(cuid())
  accountId String
  vehicleId String
  status    String   @default("pending") // pending, in_progress, completed
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  deletedAt DateTime?

  account Account         @relation(fields: [accountId], references: [id])
  vehicle Vehicle         @relation(fields: [vehicleId], references: [id])
  items   ChecklistItem[]

  @@index([accountId])
  @@index([vehicleId])
  @@index([status])
  @@index([deletedAt])
  @@map("checklists")
}

model ChecklistItem {
  id         String   @id @default(cuid())
  checklistId String
  name       String
  done       Boolean  @default(false)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  checklist Checklist @relation(fields: [checklistId], references: [id], onDelete: Cascade)

  @@index([checklistId])
  @@index([done])
  @@map("checklist_items")
}

model Plan {
  id          String   @id @default(cuid())
  name        String
  description String?
  price       Float
  features    String[] // Array de features
  active      Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  deletedAt   DateTime?

  subscriptions Subscription[]

  @@index([active])
  @@index([deletedAt])
  @@map("plans")
}

model Subscription {
  id          String   @id @default(cuid())
  accountId   String
  planId      String
  status      String   @default("active") // active, cancelled, expired
  startDate   DateTime @default(now())
  endDate     DateTime?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  deletedAt   DateTime?

  account Account @relation(fields: [accountId], references: [id])
  plan    Plan   @relation(fields: [planId], references: [id])

  @@index([accountId])
  @@index([planId])
  @@index([status])
  @@index([deletedAt])
  @@map("subscriptions")
}

model PushSubscription {
  id        String   @id @default(cuid())
  accountId String
  endpoint  String
  p256dh    String
  auth      String
  userAgent String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  account Account @relation(fields: [accountId], references: [id], onDelete: Cascade)

  @@unique([accountId, endpoint])
  @@index([accountId])
  @@map("push_subscriptions")
}

model PushNotificationLog {
  id           String   @id @default(cuid())
  title        String
  body         String
  targetFilter String
  sentCount    Int      @default(0)
  createdAt    DateTime @default(now())

  @@index([createdAt])
  @@map("push_notification_logs")
}

// Message templates for triggers (welcome, subscription_expiring, subscription_expired)
// channel: pwa (title+body) or email (subject+body). daysOffset: null for welcome;
// for subscription_expiring = days before expiry; for subscription_expired = days after (0 = on day).
model NotificationTemplate {
  id         String   @id @default(cuid())
  name       String?  // Optional label for admin (e.g. "Bem-vindo email")
  trigger    String   // welcome | subscription_expiring | subscription_expired
  channel    String   // pwa | email
  daysOffset Int?     // null = welcome; expiring = days before; expired = days after (0 = immediate)
  subject    String?  // Email: subject line
  title      String?  // PWA: notification title
  body       String   // Content (plain or HTML for email)
  active     Boolean  @default(true)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  deletedAt  DateTime?

  @@unique([trigger, channel, daysOffset])
  @@index([trigger])
  @@index([channel])
  @@index([deletedAt])
  @@map("notification_templates")
}
